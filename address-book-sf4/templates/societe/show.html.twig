{% extends 'base.html.twig' %}

{% block title %}Societe{% endblock %}

{% block body %}
    <h1>Societe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ societe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ societe.nom }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ societe.ville }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Liste des contacts de la société {{ societe.nom }}</h2>

    <ul>
        {% for contact in societe.contacts %}
        <li>{{ contact.prenom }} {{ contact.nom }}</li>
        {% endfor %}
    </ul>

    <a href="{{ path('societe_index') }}">back to list</a>

    <a href="{{ path('societe_edit', {'id': societe.id}) }}">edit</a>

    {{ include('societe/_delete_form.html.twig') }}
{% endblock %}
