{% extends 'base.html.twig' %}

{% block title %}Liste des contacts - AddressBook{% endblock %}

{% block body %}
    <h2>Liste des contacts</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nom complet</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.prenom }} {{ contact.nom }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_contact_show', {id: contact.id}) }}">Afficher</a>
                        <a class="btn btn-sm btn-warning" href="{{ path('app_contact_update', {id: contact.id}) }}">Modifier</a>
                        <a class="btn btn-sm btn-danger" href="{{ path('app_contact_delete', {id: contact.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Pas de contact</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
